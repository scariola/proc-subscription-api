		http://www.mulesoft.org/schema/mule/munit http://www.mulesoft.org/schema/mule/munit/current/mule-munit.xsd
		http://www.mulesoft.org/schema/mule/munit-tools  http://www.mulesoft.org/schema/mule/munit-tools/current/mule-munit-tools.xsd">
	<munit:config name="sys-mongodb-api-flows-test-suite.xml" />
	<munit:test name="sys-mongodb-api-get-whitelist-msisdn-subflow-success-test" doc:id="adac4c9a-a496-4f9a-9b63-1bf13c67dabf">
		<munit:behavior >
			<munit-tools:mock-when doc:name="Mock GET/ whitelist/{msisdn}" doc:id="b941d916-00bf-4469-ac83-bd93ad51b2c5" processor="http:request">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="b6f5ae47-c163-4281-b2b9-23f6dbe84063" attributeName="doc:id" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value="#[output application/json --- readUrl('classpath://dw/mock/payload-bonus-response.dwl')]" mediaType="application/json" encoding="UTF-8" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<munit:set-event doc:name="Set Event" doc:id="5009f736-98f0-44e1-8b91-6c35742c2a21" >
				<munit:variables >
					<munit:variable key="formattedSubscriberData" value="#[output application/json --- readUrl('classpath://dw/mock/var-formattedSubscriberData-bonus.dwl')]" encoding="UTF-8" mediaType="application/json" />
				</munit:variables>
			</munit:set-event>
			<flow-ref doc:name="Flow-ref to sys-mongodb-api-get-whitelist-msisdn-subflow" doc:id="0b56498e-96f5-4a5f-adb9-e34981606338" name="sys-mongodb-api-get-whitelist-msisdn-subflow"/>
		</munit:execution>
		<munit:validation >
			<munit-tools:assert doc:name="Assert payload" doc:id="261363b5-651c-41a1-8e6e-5f793092aa20" message="The payload does not match">
				<munit-tools:that ><![CDATA[#[%dw 2.0
import * from dw::test::Asserts
---
payload must equalTo({
  "x-event-id": "123",
  "x-event-code": 1005,
  "x-event-msg": "Success",
  "results": {
    "msisdn": "639276749952",
    "eligible": true
  }
})]]]></munit-tools:that>
			</munit-tools:assert>
			<munit-tools:verify-call doc:name="Verify END- GET/ whitelist/{msisdn}" doc:id="2a32f62f-0bcf-48a2-95b7-5060b3d14b3f" processor="logger" times="1">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="15837e78-53ce-41a4-b645-9460918a80d0" attributeName="doc:id" />
				</munit-tools:with-attributes>
			</munit-tools:verify-call>
		</munit:validation>
	</munit:test>
	<munit:test name="sys-mongodb-api-delete-whitelist-msisdn-subflow-success-test" doc:id="9b4b71db-c139-4ee1-9e36-49c60e05abb1">
		<munit:behavior >
			<munit-tools:mock-when doc:name="Mock  DELETE/ whitelist/{msisdn}" doc:id="d68af441-a665-4321-8374-b301759d2087" processor="http:request" >
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="932ad56b-3baf-4bdb-a351-80292b9e1219" attributeName="doc:id" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value="#[output application/json --- readUrl('classpath://dw/mock/payload-remove-bonus-response.dwl')]" mediaType="application/json" encoding="UTF-8" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<munit:set-event doc:name="Set Event" doc:id="d05813ca-fe3c-4c0f-bc87-a8d9690e4a5f" >
				<munit:variables >
					<munit:variable key="formattedSubscriberData" value="#[output application/json --- readUrl('classpath://dw/mock/var-formattedSubscriberData-bonus.dwl')]" encoding="UTF-8" mediaType="application/json" />
				</munit:variables>
			</munit:set-event>
			<flow-ref doc:name="Flow-ref to sys-mongodb-api-delete-whitelist-msisdn-subflow" doc:id="4a3743a3-e83c-4b02-ba34-9b1069bd0927" name="sys-mongodb-api-delete-whitelist-msisdn-subflow" />
		</munit:execution>
		<munit:validation >
			<munit-tools:assert doc:name="Assert payload" doc:id="4442d4dd-0ba7-4c48-9365-950b98d55294" message="The payload does not match" >
				<munit-tools:that ><![CDATA[#[%dw 2.0
import * from dw::test::Asserts
---
payload must equalTo({
  "x-event-id": "123",
  "x-event-code": 1999,
  "x-event-msg": "MSISDN successfully removed from whitelist"
})]]]></munit-tools:that>
			</munit-tools:assert>
			<munit-tools:verify-call doc:name="Verify END- DELETE / whitelist/{msisdn}" doc:id="6ae24372-d5c9-4f3e-afab-88c0bc7e5d85" processor="logger" times="1" >
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="f87f8bac-a685-4bfc-b8f3-e1cb1afe3c8e" attributeName="doc:id" />
				</munit-tools:with-attributes>
			</munit-tools:verify-call>
		</munit:validation>
	</munit:test>


</mule>
